{
  "openapi": "3.1.0",
  "paths": {
    "/hello": {
      "get": {
        "summary": "Returns a greeting message.",
        "operationId": "hello"
      }
    },
    "/hello/{name}": {
      "get": {
        "summary": "Returns a greeting message with name.",
        "operationId": "hello , Vivek!"
      }
    },
    "/echo": {
      "post": {
        "summary": "Returns whatever data you send (simple echo).",
        "operationId": "echo"
      }
    }
  }
}